<!-- views/adminDashboard.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Admin Dashboard</h1>
    <% buses.forEach(bus => { %>
        <div>
            <p>Bus Name: <%= bus.name %></p>
            <p>Bus Number: <%= bus.busNumber %></p>
            <p>Company: <%= bus.company %></p>
            <p>Route: <%= bus.route %></p>
            <p>Price of Seats: <%= bus.ticketPrice %></p>
            <!-- Display other bus details as needed -->
            <form action="/admin/approve" method="post">
                <input type="hidden" name="busId" value="<%= bus._id %>">
                <button type="submit" name="action" value="approve">Approve</button>
            </form>
            <form action="/admin/reject" method="post">
                <input type="hidden" name="busId" value="<%= bus._id %>">
                <button type="submit" name="action" value="reject">Reject</button>
            </form>
        </div>
    <% }); %>
</body>
</html>
