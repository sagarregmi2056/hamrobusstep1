<!-- views/home.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
</head>
<body>
    <h1>Welcome to Bus Booking System</h1>
    
    <!-- Search Form -->
    <form method="get" action="/search">
        <input type="text" name="origin" placeholder="Origin Address" required>
        <input type="text" name="destination" placeholder="Destination Address" required>
        <input type="date" name="date" required>
        <button type="submit">Search</button>
    </form>

    <!-- Recently Added Buses -->
    <h2>Recently Added Buses</h2>
    <ul>
        <% for (const bus of recentlyAddedBuses) { %>
            <li><%= bus.busNumber %></li>
            <li><%= bus.origin %></li>
            <li><%= bus.destination %></li>
            <!-- Display other bus details as needed -->
        <% } %>
    </ul>

     <!-- Pagination -->
     <% if (totalPages > 1) { %>
        <div>
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>">Previous</a>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>">Next</a>
            <% } %>
        </div>
    <% } %>

    <!-- Login Options -->
    <h2>Login</h2>
    <a href="/auth/login/otp">Login with OTP</a>
    <a href="/auth/login/google">Login with Google</a>
</body>
</html>
